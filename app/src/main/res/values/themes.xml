<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="actionBarPopupTheme">@style/ToolbarTheme</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="app_style">
        <item name="android:background">@drawable/app_bg</item>
    </style>

    <style name="Toolbar" parent="Theme.WeatherApp">
        <item name="android:background">@color/dark_purple</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.WeatherApp">
        <item name="colorControlNormal">@color/nav_icon_color</item>
        <item name="iconTint">@color/toolbar_icon_tint</item>
        <item name="iconTintMode">src_in</item>
    </style>

    <style name="Separator" parent="Theme.WeatherApp">
        <item name="android:background">@color/separator_color</item>
    </style>
</resources>